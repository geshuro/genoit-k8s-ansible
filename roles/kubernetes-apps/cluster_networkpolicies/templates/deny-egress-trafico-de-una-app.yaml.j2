apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: {{ deny_all_trafico_app_nombre }}
spec:
  podSelector:
    matchLabels:
      {{ deny_all_trafico_app_matchlabels | to_nice_yaml(indent=2) | trim | indent(width=6) }}
  policyTypes:
  - Egress
  egress:
  # Permitir resolucion DNS
  - ports:
    - port: 53
      protocol: UDP
    - port: 53
      protocol: TCP