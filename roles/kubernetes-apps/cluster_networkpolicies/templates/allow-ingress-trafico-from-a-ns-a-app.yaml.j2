apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: "{{ allow_trafico_from_a_ns_a_pod_name }}-allow-a-namespace"
spec:
  podSelector:
    matchLabels:
      {{ allow_trafico_from_a_ns_a_pod_matchlabels | to_nice_yaml(indent=2) | trim | indent(width=6) }}
  ingress:
  - from:
    - namespaceSelector:
        matchLabels:
          {{ allow_trafico_from_a_ns_a_pod_matchlabels_ns | to_nice_yaml(indent=2) | indent(width=10) }}